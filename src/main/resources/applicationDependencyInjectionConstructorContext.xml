<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="carSpecification" class="com.dependencyInjection.constructor.Specification">
        <property name="make" value="Tata"> </property>
        <property name="model" value="Harrier"> </property>
    </bean>
    <bean id="myCar" class="com.dependencyInjection.constructor.Car" >
        <constructor-arg ref="carSpecification"/>
    </bean>

</beans>